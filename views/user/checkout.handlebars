<section class="checkout">
        {{#if session.login}}
        {{#if count}}
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6><span class="icon_tag_alt"></span>Bạn có mã giảm giá? <a class="click-here" href="/user/gio-hang#ma-giam-gia">Click
                            here</a> để nhập mã giảm
                        giá
                    </h6>
                </div>
            </div>
            <div class="checkout__form">
                <h4>Chi tiết thanh toán</h4>
                <form action="#">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <div class="row">
                                
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>Tên<span>*</span></p>
                                        <input type="text" name="name" id="name" value="{{session.userInfo.name}}" placeholder="Họ & Tên">
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Địa chỉ<span>*</span></p>
                                <input type="text" name="address" placeholder="Số nhà, quận huyện, Tỉnh, Thành Phố" class="checkout__input__add" value="{{session.userInfo.address}}">
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Số điện thoại<span>*</span></p>
                                        <input type="tel" name="phone" value="{{session.userInfo.phone}}"  placeholder="Số điện thoại">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Email</p>
                                        <input type="email" name="email" value="{{session.userInfo.email}}" placeholder="Email">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="checkout__input">
                                <p>Ghi chú</p>
                                <input type="text" id="note" placeholder="Thời gian giao hàng ...">
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4>Thông tin hóa đơn</h4>
                                <div class="checkout__order__products">Sản phẩm <span>Thành tiền</span></div>
                                <ul>
                                    {{#each cart}}
                                        <li><label>{{this.name}}</label><span>{{this.total}}</span></li>
                                    {{/each}}
                                </ul>
                                <div class="checkout__order__subtotal">Tổng tiền hàng <span>{{total}}</span></div>
                                <div class="checkout__order__coupons">Giảm giá<span id="discount" data-code"{{code}}">-{{discount}}</span></div>
                                <div class="checkout__order__transport-fee">Phí vận chuyển <span>{{ship}}</span></div>
                                <div class="checkout__order__total">Thanh toán <span>{{pay}}</span></div>
                                <div class="checkout__input__checkbox">
                                    {{!-- <label for="acc-or">
                                        In hóa đơn?
                                        <input type="checkbox" id="acc-or">
                                        <span class="checkmark"></span>
                                    </label> --}}
                                </div>
                                <button type="button" class="site-btn" onclick="datHang()">Đặt hàng</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        {{else}}
        <div class="container">
          <div class="row">
            <h3 class="col col-12" style="text-align: center;">Bạn không có sản phẩm nào trong giỏ hàng</h3>
            <div class="col" style="text-align: center;">
              <br>
              <a class="btn" style="border: 1px solid #979797;" href="/san-pham">
               Tiếp tục mua sắm
              </a>
            </div>
          </div>
        </div>
        {{/if}}
        {{else}}
        <div class="container">
          <div class="row">
            <h3 class="col col-12" style="text-align: center;">Vui lòng đăng nhập lại</h3>
            <div class="col" style="text-align: center;">
              <br>
              <button class="btn" style="border: 1px solid #979797;" onclick="loginInHeader()">
               Đăng nhập
              </button>
            </div>
          </div>
        </div>
        {{/if}}
    </section>
    <script>
        function datHang(){
            var name = document.getElementById("name");
            var phone = document.getElementById("phone");
            var email = document.getElementById("email");
            var address = document.getElementById("address");
            var note = document.getElementById("note");
            var code = document.getElementById("discount").getAttribute("data-value");
            var settings = {
                url: '/user/checkout',
                method: 'POST',
                timeout: 0,
                headers: {
                    'Content-Type': 'application/json',
                },
                data: JSON.stringify({
                    code: code.toUpperCase(),
                    name:name,
                    phone:phone,
                    email:email,
                    address:address,
                    note:note,
                }),
            };

            $.ajax(settings).done(function (response) {
                
            });
        }
    </script>